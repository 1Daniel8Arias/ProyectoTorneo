<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-border-width: 1; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 4, 0, 0, 2);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="torneo.proyectotorneo.viewController.CardPartidoViewController">

    <!-- Header: Jornada y Estado -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 12 16 8 16;">
        <!-- Jornada -->
        <Label fx:id="lblJornada" text="Jornada 2" style="-fx-text-fill: #2563eb; -fx-font-size: 12px; -fx-font-weight: bold;">
            <font>
                <Font name="System Bold" size="12" />
            </font>
        </Label>

        <!-- Separador -->
        <Label text="•" style="-fx-text-fill: #d1d5db; -fx-font-size: 12px;" />

        <!-- Estado -->
        <Label fx:id="lblEstado" text="Programado" style="-fx-background-color: #dbeafe; -fx-text-fill: #1e40af; -fx-padding: 3 10; -fx-background-radius: 12; -fx-font-size: 11px; -fx-font-weight: bold;">
            <font>
                <Font name="System Bold" size="11" />
            </font>
        </Label>

        <Region HBox.hgrow="ALWAYS" />

        <!-- Botones de acción -->
        <HBox spacing="8">
            <Button fx:id="btnEditar" onAction="#handleEditar" text="Editar" style="-fx-background-color: transparent; -fx-text-fill: #6b7280; -fx-cursor: hand; -fx-font-size: 12px; -fx-padding: 4 8; -fx-background-radius: 4; -fx-border-width: 0;">
                <font>
                    <Font size="12" />
                </font>
            </Button>
            <Button fx:id="btnEliminar" onAction="#handleEliminar" text="Eliminar" style="-fx-background-color: transparent; -fx-text-fill: #dc2626; -fx-cursor: hand; -fx-font-size: 12px; -fx-padding: 4 8; -fx-background-radius: 4; -fx-border-width: 0;">
                <font>
                    <Font size="12" />
                </font>
            </Button>
        </HBox>
    </HBox>

    <!-- Contenido Principal: Equipos y Marcador -->
    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 8 16 12 16;">

        <!-- Equipo Local -->
        <VBox alignment="CENTER_RIGHT" spacing="4" HBox.hgrow="ALWAYS">
            <Label fx:id="lblEquipoLocal" text="Millonarios FC" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" wrapText="true" maxWidth="200">
                <font>
                    <Font name="System Bold" size="15" />
                </font>
            </Label>
            <Label text="Local" style="-fx-font-size: 11px; -fx-text-fill: #9ca3af;">
                <font>
                    <Font size="11" />
                </font>
            </Label>
        </VBox>

        <!-- Marcador o VS -->
        <HBox fx:id="hboxMarcador" alignment="CENTER" spacing="10" style="-fx-min-width: 80;">
            <!-- Goles Local -->
            <Label fx:id="lblGolesLocal" text="3" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" visible="false">
                <font>
                    <Font name="System Bold" size="28" />
                </font>
            </Label>

            <!-- VS o separador -->
            <Label fx:id="lblVS" text="vs" style="-fx-font-size: 14px; -fx-text-fill: #9ca3af; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="14" />
                </font>
            </Label>

            <!-- Goles Visitante -->
            <Label fx:id="lblGolesVisitante" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" visible="false">
                <font>
                    <Font name="System Bold" size="28" />
                </font>
            </Label>
        </HBox>

        <!-- Equipo Visitante -->
        <VBox alignment="CENTER_LEFT" spacing="4" HBox.hgrow="ALWAYS">
            <Label fx:id="lblEquipoVisitante" text="América de Cali" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #1f2937;" wrapText="true" maxWidth="200">
                <font>
                    <Font name="System Bold" size="15" />
                </font>
            </Label>
            <Label text="Visitante" style="-fx-font-size: 11px; -fx-text-fill: #9ca3af;">
                <font>
                    <Font size="11" />
                </font>
            </Label>
        </VBox>
    </HBox>

    <!-- Footer: Información adicional -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 8 16 12 16; -fx-border-color: #f3f4f6; -fx-border-width: 1 0 0 0;">

        <!-- Fecha -->
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Fecha:" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;">
                <font>
                    <Font size="12" />
                </font>
            </Label>
            <Label fx:id="lblFecha" text="2024-01-27" style="-fx-font-size: 12px; -fx-text-fill: #374151; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="12" />
                </font>
            </Label>
            <Label fx:id="lblHora" text="18:00" style="-fx-font-size: 12px; -fx-text-fill: #374151; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="12" />
                </font>
            </Label>
        </HBox>

        <!-- Estadio -->
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Estadio:" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;">
                <font>
                    <Font size="12" />
                </font>
            </Label>
            <Label fx:id="lblEstadio" text="El Campín" style="-fx-font-size: 12px; -fx-text-fill: #374151; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="12" />
                </font>
            </Label>
        </HBox>

        <Region HBox.hgrow="ALWAYS" />

        <!-- Árbitro -->
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Árbitro:" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;">
                <font>
                    <Font size="12" />
                </font>
            </Label>
            <Label fx:id="lblArbitro" text="Nicolas Gallo" style="-fx-font-size: 12px; -fx-text-fill: #374151; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="12" />
                </font>
            </Label>
        </HBox>
    </HBox>

</VBox>
