<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ListadoJugadores" pageWidth="595" pageHeight="842"
              columnWidth="535" leftMargin="30" rightMargin="30"
              topMargin="20" bottomMargin="20">

    <property name="ireport.zoom" value="1.0"/>
    <property name="ireport.x" value="0"/>
    <property name="ireport.y" value="0"/>

    <style name="Title" fontSize="26" isBold="true"/>
    <style name="SubTitle" fontSize="14" forecolor="#666666"/>
    <style name="Column header" fontSize="12" isBold="true"/>
    <style name="Detail" fontSize="10"/>

    <parameter name="LOGO_PATH" class="java.lang.String" isForPrompting="false"/>

    <queryString>
        <![CDATA[SELECT 
            j.id_jugador,
            j.nombre,
            j.apellido,
            j.posicion,
            e.nombre AS nombre_equipo
        FROM jugador j
        LEFT JOIN equipo e ON j.id_equipo = e.id_equipo
        ORDER BY j.apellido, j.nombre]]>
    </queryString>

    <field name="ID_JUGADOR" class="java.math.BigDecimal"/>
    <field name="NOMBRE" class="java.lang.String"/>
    <field name="APELLIDO" class="java.lang.String"/>
    <field name="POSICION" class="java.lang.String"/>
    <field name="NOMBRE_EQUIPO" class="java.lang.String"/>

    <variable name="TOTAL_JUGADORES" class="java.lang.Integer" calculation="Count">
        <variableExpression><![CDATA[$F{ID_JUGADOR}]]></variableExpression>
    </variable>

    <background>
        <band splitType="Stretch"/>
    </background>

    <title>
        <band height="80" splitType="Stretch">
            <staticText>
                <reportElement style="Title" x="0" y="13" width="535" height="35"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[LISTADO DE JUGADORES]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="435" y="55" width="100" height="20"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="0" y="75" width="535" height="1" forecolor="#3399FF"/>
                <graphicElement>
                    <pen lineWidth="2.0"/>
                </graphicElement>
            </line>
        </band>
    </title>

    <pageHeader>
        <band height="10" splitType="Stretch"/>
    </pageHeader>

    <columnHeader>
        <band height="30" splitType="Stretch">
            <staticText>
                <reportElement style="Column header" x="0" y="10" width="40" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <text><![CDATA[ID]]></text>
            </staticText>
            <staticText>
                <reportElement style="Column header" x="40" y="10" width="100" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <text><![CDATA[Nombre]]></text>
            </staticText>
            <staticText>
                <reportElement style="Column header" x="140" y="10" width="100" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <text><![CDATA[Apellido]]></text>
            </staticText>
            <staticText>
                <reportElement style="Column header" x="240" y="10" width="85" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>

            </staticText>
            <staticText>
                <reportElement style="Column header" x="325" y="10" width="80" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <text><![CDATA[Posición]]></text>
            </staticText>
            <staticText>
                <reportElement style="Column header" x="405" y="10" width="130" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <text><![CDATA[Equipo]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20" splitType="Stretch">
            <textField>
                <reportElement style="Detail" x="0" y="0" width="40" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{ID_JUGADOR}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="Detail" x="40" y="0" width="100" height="20"/>
                <box leftPadding="5">
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{NOMBRE}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="Detail" x="140" y="0" width="100" height="20"/>
                <box leftPadding="5">
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{APELLIDO}]]></textFieldExpression>
            </textField>
            <textField pattern="dd/MM/yyyy">
                <reportElement style="Detail" x="240" y="0" width="85" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{FECHA_NACIMIENTO}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="Detail" x="325" y="0" width="80" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{POSICION}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement style="Detail" x="405" y="0" width="130" height="20"/>
                <box leftPadding="5">
                    <pen lineWidth="0.5"/>
                    <topPen lineWidth="0.5"/>
                    <leftPen lineWidth="0.5"/>
                    <bottomPen lineWidth="0.5"/>
                    <rightPen lineWidth="0.5"/>
                </box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{NOMBRE_EQUIPO}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <columnFooter>
        <band height="5" splitType="Stretch"/>
    </columnFooter>

    <pageFooter>
        <band height="40" splitType="Stretch">
            <textField>
                <reportElement x="215" y="20" width="80" height="20"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Página "+$V{PAGE_NUMBER}+" de"]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="295" y="20" width="40" height="20"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[" " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <summary>
        <band height="50" splitType="Stretch">
            <staticText>
                <reportElement x="350" y="15" width="100" height="20" forecolor="#000000"/>
                <textElement textAlignment="Right">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Jugadores:]]></text>
            </staticText>
            <textField>
                <reportElement x="450" y="15" width="85" height="20" forecolor="#000000"/>
                <textElement textAlignment="Center">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{TOTAL_JUGADORES}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>
