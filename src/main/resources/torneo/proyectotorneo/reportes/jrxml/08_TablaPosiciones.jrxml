    <queryString>
        <![CDATA[SELECT 
            tp.posicion,
            e.nombre AS equipo,
            tp.partidos_jugados,
            tp.partidos_ganados,
            tp.partidos_empatados,
            tp.partidos_perdidos,
            tp.goles_favor,
            tp.goles_contra,
            (tp.goles_favor - tp.goles_contra) AS diferencia_goles,
            tp.puntos
        FROM tabla_posicion tp
        INNER JOIN equipo e ON tp.id_equipo = e.id_equipo
        ORDER BY tp.posicion]]>
    </queryString>
    
