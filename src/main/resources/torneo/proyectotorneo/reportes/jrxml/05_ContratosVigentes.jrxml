              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ContratosVigentes" pageWidth="595" pageHeight="842" 
              columnWidth="535" leftMargin="30" rightMargin="30" 
              topMargin="20" bottomMargin="20">
    
    <style name="Title" fontSize="24" isBold="true"/>
    <style name="Column header" fontSize="10" isBold="true"/>
    <style name="Detail" fontSize="9"/>
    
    <queryString>
        <![CDATA[SELECT 
            c.id_contrato,
            j.nombre || ' ' || j.apellido AS jugador,
            e.nombre AS equipo,
            c.fecha_inicio,
            c.fecha_fin,
            c.salario,
            TRUNC(c.fecha_fin - SYSDATE) AS dias_restantes,
            CASE 
                WHEN c.fecha_fin < SYSDATE THEN 'Vencido'
                WHEN TRUNC(c.fecha_fin - SYSDATE) <= 30 THEN 'Por Vencer'
                ELSE 'Vigente'
            END AS estado
        FROM contrato c
        INNER JOIN jugador j ON c.id_jugador = j.id_jugador
        LEFT JOIN equipo e ON j.id_equipo = e.id_equipo
        WHERE c.fecha_fin >= ADD_MONTHS(SYSDATE, -1)
        ORDER BY c.fecha_fin, j.apellido]]>
    </queryString>
    
    <field name="ID_CONTRATO" class="java.math.BigDecimal"/>
    <field name="JUGADOR" class="java.lang.String"/>
    <field name="EQUIPO" class="java.lang.String"/>
    <field name="FECHA_INICIO" class="java.sql.Timestamp"/>
    <field name="FECHA_FIN" class="java.sql.Timestamp"/>
    <field name="SALARIO" class="java.math.BigDecimal"/>
    <field name="DIAS_RESTANTES" class="java.math.BigDecimal"/>
    <field name="ESTADO" class="java.lang.String"/>
    
    <variable name="TOTAL_CONTRATOS" class="java.lang.Integer" calculation="Count">
        <variableExpression><![CDATA[$F{ID_CONTRATO}]]></variableExpression>
    </variable>
    
    <variable name="SUMA_SALARIOS" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{SALARIO}]]></variableExpression>
    </variable>
    
