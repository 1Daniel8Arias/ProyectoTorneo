<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="EstadiosPorDepartamento" pageWidth="595" pageHeight="842" 
              columnWidth="535" leftMargin="30" rightMargin="30" 
              topMargin="20" bottomMargin="20">
    
    <style name="Title" fontSize="24" isBold="true"/>
    <style name="GroupHeader" fontSize="12" isBold="true"/>
    <style name="Column header" fontSize="10" isBold="true"/>
    <style name="Detail" fontSize="9"/>
    
    <queryString>
        <![CDATA[SELECT 
            d.id_departamento,
            d.nombre AS departamento,
            m.nombre AS municipio,
            e.id_estadio,
            e.nombre AS estadio,
            e.capacidad,
            COUNT(DISTINCT p.id_partido) AS partidos_jugados
        FROM departamento d
        INNER JOIN municipio m ON d.id_departamento = m.id_departamento
        LEFT JOIN estadio e ON m.id_municipio = e.id_municipio
        LEFT JOIN partido p ON e.id_estadio = p.id_estadio
        GROUP BY d.id_departamento, d.nombre, m.nombre, e.id_estadio, e.nombre, e.capacidad
        ORDER BY d.nombre, m.nombre, e.nombre]]>
    </queryString>
    
    <field name="ID_DEPARTAMENTO" class="java.math.BigDecimal"/>
    <field name="DEPARTAMENTO" class="java.lang.String"/>
    <field name="MUNICIPIO" class="java.lang.String"/>
    <field name="ID_ESTADIO" class="java.math.BigDecimal"/>
    <field name="ESTADIO" class="java.lang.String"/>
    <field name="CAPACIDAD" class="java.math.BigDecimal"/>
    <field name="PARTIDOS_JUGADOS" class="java.math.BigDecimal"/>
    
    <variable name="TOTAL_ESTADIOS_DEPTO" class="java.lang.Integer" resetType="Group" resetGroup="Departamento" calculation="Count">
        <variableExpression><![CDATA[$F{ID_ESTADIO}]]></variableExpression>
    </variable>
    
    <variable name="CAPACIDAD_TOTAL_DEPTO" class="java.math.BigDecimal" resetType="Group" resetGroup="Departamento" calculation="Sum">
        <variableExpression><![CDATA[$F{CAPACIDAD}]]></variableExpression>
    </variable>
    
    <variable name="TOTAL_GENERAL_ESTADIOS" class="java.lang.Integer" calculation="Count">
        <variableExpression><![CDATA[$F{ID_ESTADIO}]]></variableExpression>
    </variable>
    
    <variable name="CAPACIDAD_TOTAL_GENERAL" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{CAPACIDAD}]]></variableExpression>
    </variable>
    
    <group name="Departamento">
        <groupExpression><![CDATA[$F{DEPARTAMENTO}]]></groupExpression>
        <groupHeader>
            <band height="60">
                <rectangle>
                    <reportElement mode="Opaque" x="0" y="5" width="535" height="25" backcolor="#996633"/>
                </rectangle>
                <textField>
                    <reportElement style="GroupHeader" x="10" y="8" width="400" height="20" forecolor="#FFFFFF"/>
                    <textElement verticalAlignment="Middle">
                        <font size="13" isBold="true"/>
                    </textElement>
                    <textFieldExpression><![CDATA[$F{DEPARTAMENTO}]]></textFieldExpression>
                </textField>
                <staticText>
                    <reportElement style="Column header" mode="Opaque" x="0" y="35" width="40" height="25" backcolor="#FFCC99"/>
                    <box>
                        <pen lineWidth="0.5"/>
                    </box>
                    <textElement textAlignment="Center" verticalAlignment="Middle">
                        <font size="8"/>
                    </textElement>
                    <text><![CDATA[ID]]></text>
                </staticText>
                <staticText>
                    <reportElement style="Column header" mode="Opaque" x="40" y="35" width="180" height="25" backcolor="#FFCC99"/>
                    <box>
                        <pen lineWidth="0.5"/>
                    </box>
                    <textElement textAlignment="Center" verticalAlignment="Middle">
                        <font size="8"/>
                    </textElement>
                    <text><![CDATA[Nombre del Estadio]]></text>
                </staticText>
                <staticText>
                    <reportElement style="Column header" mode="Opaque" x="220" y="35" width="120" height="25" backcolor="#FFCC99"/>
                    <box>
                        <pen lineWidth="0.5"/>
                    </box>
                    <textElement textAlignment="Center" verticalAlignment="Middle">
                        <font size="8"/>
                    </textElement>
                    <text><![CDATA[Municipio]]></text>
                </staticText>
                <staticText>
                    <reportElement style="Column header" mode="Opaque" x="340" y="35" width="90" height="25" backcolor="#FFCC99"/>
                    <box>
                        <pen lineWidth="0.5"/>
                    </box>
                    <textElement textAlignment="Center" verticalAlignment="Middle">
                        <font size="8"/>
                    </textElement>
                    <text><![CDATA[Capacidad]]></text>
                </staticText>
                <staticText>
                    <reportElement style="Column header" mode="Opaque" x="430" y="35" width="105" height="25" backcolor="#FFCC99"/>
                    <box>
                        <pen lineWidth="0.5"/>
                    </box>
                    <textElement textAlignment="Center" verticalAlignment="Middle">
                        <font size="8"/>
                    </textElement>
                    <text><![CDATA[Partidos Jugados]]></text>
                </staticText>
            </band>
        </groupHeader>
        <groupFooter>
            <band height="35">
                <rectangle>
                    <reportElement mode="Opaque" x="0" y="5" width="535" height="25" backcolor="#F5E6CC"/>
                </rectangle>
                <staticText>
                    <reportElement x="40" y="8" width="150" height="18"/>
                    <textElement textAlignment="Right">
                        <font size="9" isBold="true"/>
                    </textElement>
                    <text><![CDATA[Total Estadios en Departamento:]]></text>
                </staticText>
                <textField>
                    <reportElement x="190" y="8" width="60" height="18"/>
                    <textElement textAlignment="Center">
                        <font size="9" isBold="true"/>
                    </textElement>
                    <textFieldExpression><![CDATA[$V{TOTAL_ESTADIOS_DEPTO}]]></textFieldExpression>
                </textField>
                <staticText>
                    <reportElement x="260" y="8" width="120" height="18"/>
                    <textElement textAlignment="Right">
                        <font size="9" isBold="true"/>
                    </textElement>
                    <text><![CDATA[Capacidad Total:]]></text>
                </staticText>
                <textField pattern="#,##0">
                    <reportElement x="380" y="8" width="100" height="18"/>
                    <textElement textAlignment="Center">
                        <font size="9" isBold="true"/>
                    </textElement>
                    <textFieldExpression><![CDATA[$V{CAPACIDAD_TOTAL_DEPTO}]]></textFieldExpression>
                </textField>
            </band>
        </groupFooter>
    </group>
    
    <title>
        <band height="80">
            <staticText>
                <reportElement style="Title" x="0" y="10" width="535" height="35"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[ESTADIOS POR DEPARTAMENTO]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="45" width="535" height="20" forecolor="#666666"/>
                <textElement textAlignment="Center">
                    <font size="11"/>
                </textElement>
                <text><![CDATA[Infraestructura Deportiva por Región]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="435" y="60" width="100" height="15"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </title>
    
    <detail>
        <band height="20">
            <textField isBlankWhenNull="true">
                <reportElement style="Detail" x="0" y="0" width="40" height="20"/>
                <box>
                    <pen lineWidth="0.5"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{ID_ESTADIO}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
