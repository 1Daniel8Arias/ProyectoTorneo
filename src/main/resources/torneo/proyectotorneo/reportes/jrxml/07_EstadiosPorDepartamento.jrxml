                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[" " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
    
    <summary>
        <band height="50">
            <rectangle>
                <reportElement mode="Opaque" x="0" y="10" width="535" height="35" backcolor="#663300" forecolor="#663300"/>
            </rectangle>
            <staticText>
                <reportElement x="100" y="17" width="150" height="20" forecolor="#FFFFFF"/>
                <textElement textAlignment="Right">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Total General de Estadios:]]></text>
            </staticText>
            <textField>
                <reportElement x="250" y="17" width="60" height="20" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center">
                    <font size="11" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{TOTAL_GENERAL_ESTADIOS}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="315" y="17" width="110" height="20" forecolor="#FFFFFF"/>
                <textElement textAlignment="Right">
                    <font size="11" isBold="true"/>
                </textElement>
                <text><![CDATA[Capacidad Total:]]></text>
            </staticText>
            <textField pattern="#,##0">
                <reportElement x="425" y="17" width="100" height="20" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center">
                    <font size="11" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{CAPACIDAD_TOTAL_GENERAL}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>
