<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@style/estilo1.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="torneo.proyectotorneo.viewController.LoginviewController">
    <center>
        <VBox alignment="CENTER" prefHeight="450" prefWidth="400" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);" stylesheets="@style/estilo1.css">

            <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 22px; -fx-font-weight: bold;" text="⚽ Sistema de Torneos" />
            <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 16px;" text="Iniciar Sesión" />

            <VBox alignment="CENTER_LEFT" prefWidth="100" spacing="10">
                <Label style="-fx-text-fill: #5a6c7d;" text="Usuario" />
                <TextField fx:id="txtUsuario" promptText="Ingrese su usuario" style="-fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-padding: 10;" />

                <Label style="-fx-text-fill: #5a6c7d;" text="Contraseña" />
                <PasswordField fx:id="txtContrasena" promptText="Ingrese su contraseña" style="-fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-padding: 10;" />
            </VBox>

            <Button fx:id="btnLogin" onAction="#iniciarSesion" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;" text="Ingresar" />

            <Label style="-fx-text-fill: red; -fx-font-size: 12px;" text="" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" stylesheets="@style/estilo1.css">
            <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" text="© 2025 Federación Colombiana de Fútbol" />
        </HBox>
    </bottom>
</BorderPane>
