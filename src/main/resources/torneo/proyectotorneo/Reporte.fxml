            </Label>
        </VBox>
    </top>

    <!-- PANEL IZQUIERDO - LISTA DE REPORTES -->
    <left>
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15;">
            <Label text="Reportes Disponibles" style="-fx-font-weight: bold; -fx-font-size: 14;"/>

            <Separator/>

            <ListView fx:id="listViewReportes" prefWidth="280" prefHeight="500"
