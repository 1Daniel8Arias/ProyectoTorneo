<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@style/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="torneo.proyectotorneo.viewController.TablaViewController">
    <top>
        <VBox prefHeight="80.0" prefWidth="1174.0" spacing="10" styleClass="header-container">
            <padding>
                <Insets bottom="10.0" left="30.0" right="30.0" top="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <children>
                        <Label styleClass="page-title" text="Tabla De Posiciones">
                            <font>
                                <Font name="System Bold" size="32" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <Label styleClass="subtitle" text="Clasificación del Campeonato de Fútbol Colombiano">
                    <font>
                        <Font size="14" />
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="15" styleClass="content-container">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>
            <children>
                <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
                    <children>
                        <Label fx:id="lblContador" styleClass="table-header" text="Clasificación General">
                            <font>
                                <Font name="System Bold" size="14" />
                            </font>
                            <padding>
                                <Insets bottom="10" top="10" />
                            </padding>
                        </Label>
                    </children>
                </VBox>
            <TableView fx:id="tablaPosiciones" editable="true" nodeOrientation="LEFT_TO_RIGHT" style="-fx-background-color: white;" stylesheets="@style/estilo1.css">
               <columns>
                  <TableColumn fx:id="colPosicion" prefWidth="40" text="#" />
                  <TableColumn fx:id="colEquipo" prefWidth="200" text="Equipo" />
                  <TableColumn fx:id="colPartidosJugados" prefWidth="50" text="PJ" />
                  <TableColumn fx:id="colPartidosGanados" prefWidth="75.0" text="G" />
                  <TableColumn fx:id="colEmpates" prefWidth="75.0" text="E" />
                  <TableColumn fx:id="colPerdidos" prefWidth="75.0" text="P" />
                  <TableColumn fx:id="colGolesAFavor" prefWidth="75.0" text="GF" />
                  <TableColumn fx:id="colEncontra" prefWidth="75.0" text="GC" />
                  <TableColumn fx:id="colDiderencia" prefWidth="75.0" text="DG" />
                  <TableColumn fx:id="colPuntos" prefWidth="60" text="Pts" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
