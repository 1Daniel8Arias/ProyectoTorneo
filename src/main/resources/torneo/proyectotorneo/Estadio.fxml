<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@style/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="torneo.proyectotorneo.viewController.EstadioViewController">
    <top>
        <VBox prefHeight="80.0" prefWidth="1174.0" spacing="10" styleClass="header-container">
            <padding>
                <Insets bottom="10.0" left="30.0" right="30.0" top="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <children>
                        <Label styleClass="page-title" text="Estadios">
                            <font>
                                <Font name="System Bold" size="32" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnNuevoEstadio" onAction="#handleNuevoEstadio" styleClass="btn-primary" text="+ Nuevo Estadio">
                            <font>
                                <Font size="14" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <Label styleClass="subtitle" text="Gestión de Estadios">
                    <font>
                        <Font size="14" />
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="15" styleClass="content-container">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="filter-bar">
                    <children>
                        <TextField fx:id="txtBuscar" prefWidth="300" promptText="Buscar por nombre..." styleClass="search-field">
                            <font>
                                <Font size="13" />
                            </font>
                        </TextField>
                        <ComboBox fx:id="cmbTipo" prefWidth="200" promptText="Tipo" styleClass="filter-combo" />
                  <ComboBox fx:id="cmbEquipo" prefWidth="200" promptText="Equipo" styleClass="filter-combo" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnBuscar" onAction="#handleBuscar" styleClass="btn-secondary" text="Buscar">
                            <font>
                                <Font size="13" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
                    <children>
                        <Label fx:id="lblContador" styleClass="table-header" text="Lista de Estadios (0)">
                            <font>
                                <Font name="System Bold" size="14" />
                            </font>
                            <padding>
                                <Insets bottom="10" top="10" />
                            </padding>
                        </Label>
                        <TableView fx:id="tableEstadio" styleClass="data-table" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colNumero" prefWidth="50" styleClass="col-center" text="N°">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="id" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="colNombre" prefWidth="200" text="Nombre ">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="nombreCompleto" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="colTipo" prefWidth="180" text="Tipo">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="nombreEquipo" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="colCapacidad" prefWidth="140" text="Capacidad">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="posicion" />
                                    </cellValueFactory>
                                </TableColumn>
                        <TableColumn fx:id="colEquipo" prefWidth="140" text="Equipo">
                           <cellValueFactory>
                              <PropertyValueFactory property="posicion" />
                           </cellValueFactory>
                        </TableColumn>
                                <TableColumn fx:id="colAcciones" prefWidth="200" styleClass="col-center" text="Acciones" />
                            </columns>
                            <placeholder>
                                <VBox alignment="CENTER" spacing="10">
                                    <children>
                                        <Label styleClass="empty-message" text="No hay Estadios registrados">
                                            <font>
                                                <Font size="14" />
                                            </font>
                                        </Label>
                                        <Label styleClass="empty-hint" text="Haz clic en 'Nuevo Estadio' para agregar uno">
                                            <font>
                                                <Font size="12" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </placeholder>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
