<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@style/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="torneo.proyectotorneo.viewController.JugadorViewController">

    <!-- Header -->
    <top>
        <VBox spacing="10" styleClass="header-container">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label styleClass="page-title" text="Jugadores">
                    <font>
                        <Font name="System Bold" size="32" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnNuevoJugador" onAction="#handleNuevoJugador" styleClass="btn-primary" text="+ Nuevo Jugador">
                    <font>
                        <Font size="14" />
                    </font>
                </Button>
            </HBox>

            <Label styleClass="subtitle" text="Gestión de jugadores del campeonato">
                <font>
                    <Font size="14" />
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="15" styleClass="content-container">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>

            <!-- Search and Filters -->
            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="filter-bar">
                <TextField fx:id="txtBuscar" prefWidth="300" promptText="Buscar por nombre..." styleClass="search-field">
                    <font>
                        <Font size="13" />
                    </font>
                </TextField>

                <ComboBox fx:id="cmbEquipo" prefWidth="200" promptText="Todos los equipos" styleClass="filter-combo">
                </ComboBox>

                <ComboBox fx:id="cmbPosicion" prefWidth="200" promptText="Todas las posiciones" styleClass="filter-combo">
                </ComboBox>

                <Region HBox.hgrow="ALWAYS" />

                <!-- Consultas Avanzadas Menu -->
                <MenuButton styleClass="btn-secondary" text="Consultas">
                    <items>
                        <Menu text="Intermedias">
                            <items>
                                <MenuItem fx:id="menuJugadoresConEquipo" onAction="#handleJugadoresConEquipo" text="Jugadores con Equipo" />
                                <MenuItem fx:id="menuJugadoresConContrato" onAction="#handleJugadoresConContrato" text="Jugadores con Contrato y Equipo" />
                                <MenuItem fx:id="menuCapitanes" onAction="#handleCapitanes" text="Capitanes" />
                            </items>
                        </Menu>
                        <Menu text="Avanzadas">
                            <items>
                                <MenuItem fx:id="menuSalarioSuperior" onAction="#handleSalarioSuperior" text="Salario Superior al Promedio" />
                                <MenuItem fx:id="menuGolesVariosPartidos" onAction="#handleGolesVariosPartidos" text="Goles en Múltiples Partidos" />
                                <MenuItem fx:id="menuSinContratoActivo" onAction="#handleSinContratoActivo" text="Sin Contrato Activo" />
                                <MenuItem fx:id="menuDelanterosSinGoles" onAction="#handleDelanterosSinGoles" text="Delanteros Sin Goles" />
                                <MenuItem fx:id="menuMayorSalarioPosicion" onAction="#handleMayorSalarioPosicion" text="Mayor Salario por Posición" />
                            </items>
                        </Menu>
                        <SeparatorMenuItem />
                    </items>
                </MenuButton>

                <Button fx:id="btnBuscar" onAction="#handleBuscar" styleClass="btn-secondary" text="Buscar">
                    <font>
                        <Font size="13" />
                    </font>
                </Button>
            </HBox>

            <!-- Table Container -->
            <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
                <Label fx:id="lblContador" styleClass="table-header" text="Lista de Jugadores (0)">
                    <font>
                        <Font name="System Bold" size="14" />
                    </font>
                    <padding>
                        <Insets bottom="10" top="10" />
                    </padding>
                </Label>

                <!-- Table -->
                <TableView fx:id="tableJugadores" styleClass="data-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colNumero" prefWidth="50" styleClass="col-center" text="N°">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="id" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn fx:id="colNombre" prefWidth="200" text="Nombre">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="nombreCompleto" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn fx:id="colEquipo" prefWidth="180" text="Equipo">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="nombreEquipo" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn fx:id="colPosicion" prefWidth="140" text="Posición">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="posicion" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn fx:id="colNumCamiseta" prefWidth="100" styleClass="col-center" text="N° Camiseta">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="numeroCamiseta" />
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn fx:id="colContrato" prefWidth="120" styleClass="col-center" text="Contrato">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="fechaContrato" />
                            </cellValueFactory>
                        </TableColumn>
                  <TableColumn fx:id="colSalario" prefWidth="120" styleClass="col-center" text="Salario">
                     <cellValueFactory>
                        <PropertyValueFactory property="fechaContrato" />
                     </cellValueFactory>
                  </TableColumn>

                        <TableColumn fx:id="colAcciones" prefWidth="200" styleClass="col-center" text="Acciones">
                        </TableColumn>
                    </columns>

                    <placeholder>
                        <VBox alignment="CENTER" spacing="10">
                            <Label styleClass="empty-message" text="No hay jugadores registrados">
                                <font>
                                    <Font size="14" />
                                </font>
                            </Label>
                            <Label styleClass="empty-hint" text="Haz clic en 'Nuevo Jugador' para agregar uno">
                                <font>
                                    <Font size="12" />
                                </font>
                            </Label>
                        </VBox>
                    </placeholder>
                </TableView>
            </VBox>
        </VBox>
    </center>

</BorderPane>
